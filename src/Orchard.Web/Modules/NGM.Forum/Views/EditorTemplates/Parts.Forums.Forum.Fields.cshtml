@model NGM.Forum.Models.ForumPart
<fieldset>
    @Html.LabelFor(m => m.Description, T("Description"))
    @Display.Body_Editor(EditorFlavor: "html", Text: Model.Description, AutoFocus: true)
</fieldset>

<fieldset>
    @Html.LabelFor(m => m.Weight)
    @Html.TextBoxFor(m => m.Weight, new { @class = "text-small" }) 
    <span class="hint">@T("If specified, will be used to sort forums")</span>
</fieldset>